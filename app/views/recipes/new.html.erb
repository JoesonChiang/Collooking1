<h1>Create a New Recipe!</h1>

<%= simple_form_for Recipe.new, url: {action: "create"}, :html => { :multipart => true } do |f| %>
    <%= f.input :name, label: 'Name:'%>
    <%= f.label :description, 'Description:'%><br />
    <%= f.text_area :description, :rows => 10%>
    <%= f.input :instructions, label: 'Instructions:'%>
    <%= f.input :level, label: 'Level:', hint:'Mark the level you think this recipe deserves'%>
	</p>
	<%= f.label :photo, "Photo" %>  
    <%= f.file_field :photo %>  
    <%= f.button :submit%>
<%end%>

